-- =========================
-- TELEPORT (SMOOTH)
-- =========================
local function Teleport(cf)
    local start = Character:GetPivot()
    local dir = (cf.Position - start.Position)
    local dist = dir.Magnitude
    if dist <= 1 then Character:PivotTo(cf) return end

    dir = dir.Unit
    local speed = 250
    local t0 = tick()

    while dist > 0 and not getgenv().StopTween do
        local moved = math.min((tick() - t0) * speed, dist)
        Character:PivotTo(CFrame.new(start.Position + dir * moved) * (cf - cf.Position))
        task.wait()
    end

    Character:PivotTo(cf)
end

-- =========================
-- REMOTE
-- =========================
local function Action(args)
    return Rep.Remotes.CommF_:InvokeServer(table.unpack(args))
end

-- =========================
-- QUEST LOGIC
-- =========================
local function GetQuest()
    local best, level = nil, -1
    for _,v in pairs(QuestData) do
        for k,q in pairs(v) do
            if q.LevelReq and Client.Data.Level.Value >= q.LevelReq and q.LevelReq > level then
                best = q
                best._sub = _
                best._key = k
                level = q.LevelReq
            end
        end
    end

    if not best then return end
    local mobName = next(best.Task)
    local npc = GuideModule.GetNearestNPC(GuideModule, RootPart.Position, Client.Data.Level.Value)

    return best, mobName, npc and npc[1]
end

-- =========================
-- AUTO QUEST + TP
-- =========================
task.spawn(function()
    while task.wait() do
        if not getgenv().AUTO_ALL then continue end
        pcall(function()
            local quest, mobName, npcPos = GetQuest()
            if not quest then return end

            if Client.PlayerGui.Main.Quest.Visible then
                for _,mob in pairs(Enemies:GetChildren()) do
                    if mob.Name == mobName and mob:FindFirstChild("HumanoidRootPart")
                    and mob.Humanoid.Health > 0 then
                        Teleport(mob.HumanoidRootPart.CFrame * CFrame.new(0,40,0))
                        break
                    end
                end
            else
                if npcPos then
                    local cf = CFrame.new(npcPos)
                    if (cf.Position - RootPart.Position).Magnitude < 5 then
                        Action({"StartQuest", quest._sub, quest._key})
                    else
                        Teleport(cf)
                    end
                end
            end
        end)
    end
end)

-- =========================
-- AUTO ATTACK
-- =========================
task.spawn(function()
    while task.wait(0.15) do
        if not getgenv().AUTO_ALL then continue end

        local nearest, dist = nil, math.huge
        for _,mob in pairs(Enemies:GetChildren()) do
            if mob:FindFirstChild("HumanoidRootPart")
            and mob:FindFirstChild("Humanoid")
            and mob.Humanoid.Health > 0 then
                local d = (mob.HumanoidRootPart.Position - RootPart.Position).Magnitude
                if d < dist then
                    dist = d
                    nearest = mob
                end
            end
        end

        if nearest then
            Rep.Modules.Net["RE/RegisterAttack"]:FireServer(0.1)
            Rep.Modules.Net["RE/RegisterHit"]:FireServer(
                nearest.HumanoidRootPart, {}, "002a98fe"
            )
        end
    end
end)

-- =========================
-- BRING MOB (SMOOTH FLOAT)
-- =========================
local Follow = {}
local FLOAT_Y = -20
local RANGE = 250

local function SetupMob(mob)
    local hrp = mob.HumanoidRootPart
    if hrp:FindFirstChild("BringAlign") then return end

    local att = Instance.new("Attachment", hrp)
    local align = Instance.new("AlignPosition", hrp)
    align.Attachment0 = att
    align.MaxForce = math.huge
    align.Responsiveness = 40
    align.ApplyAtCenterOfMass = true
    align.Name = "BringAlign"

    table.insert(Follow, mob)
end

RunService.Heartbeat:Connect(function()
    if not getgenv().AUTO_ALL then return end

    for _,mob in pairs(Enemies:GetChildren()) do
        if mob:FindFirstChild("HumanoidRootPart")
        and mob:FindFirstChild("Humanoid")
        and mob.Humanoid.Health > 0 then
            if (mob.HumanoidRootPart.Position - RootPart.Position).Magnitude <= RANGE then
                SetupMob(mob)
            end
        end
    end

    for i=#Follow,1,-1 do
        local mob = Follow[i]
        if mob and mob.Parent and mob:FindFirstChild("HumanoidRootPart") then
            mob.HumanoidRootPart.BringAlign.Position =
                RootPart.Position + Vector3.new(0, FLOAT_Y, 0)
        else
            table.remove(Follow, i)
        end
    end
end)


